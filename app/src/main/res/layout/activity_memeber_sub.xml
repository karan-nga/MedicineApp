<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rawtooth.subscription.MemeberSub">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/sub_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#E5E5E5"
        android:background="#E5E5E5"
        app:title="Patient Details"/>
    <TextView
        android:id="@+id/benfitPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/sub_toolbar"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="22dp"/>

    <TextView
        android:id="@+id/sub_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/benfitPoints"
        android:text="Choose your plan"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="22dp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/months_3"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="22dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/choseplan"
        app:layout_constraintTop_toBottomOf="@id/sub_tv2">

        <CheckBox
            android:id="@+id/sub_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/sub_checkbox"
            android:text="Rs 99"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
            android:text="3 months"
            android:textStyle="bold"
            android:textColor="#73D686"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:layout_marginEnd="13dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="22dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/choseplan"
        app:layout_constraintTop_toBottomOf="@id/months_3">

        <CheckBox
            android:id="@+id/sub_checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/sub_checkbox1"
            android:text="Rs 199"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="6 months"
            android:textStyle="bold"
            android:textColor="#73D686"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:layout_marginEnd="13dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/nav_back"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"
        app:menu="@menu/nav_menu" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="10dp"
        android:text="Done"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>