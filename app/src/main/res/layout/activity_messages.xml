<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rawtooth.anchal.insurance.Messages">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="         Your Messages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#E5E5E5"/>

    <ImageView
        android:id="@+id/docimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/docimg"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="298dp"
        android:layout_marginBottom="525dp"/>
    <TextView
        android:id="@+id/smita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr. Smita Roy"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="201dp"
        android:layout_marginBottom="549dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum_dolor_sit_amet_lorem_ipsum_dolor_sit_amet"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@id/smita"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="75dp"

        />








</androidx.constraintlayout.widget.ConstraintLayout>