<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rawtooth.anchal.insurance.TestDetails">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="        Test Details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#E5E5E5"/>

    <ImageView
        android:id="@+id/testdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/testdetails"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="22dp"
        />
    <TextView
        android:id="@+id/covid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Covid IgG Antibody Test"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="67dp"
        android:layout_marginRight="135dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 182.12"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/covid"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="67dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="251dp"
        android:layout_marginTop="58dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="13.14dp"
        android:text="Choose Lab"
        android:textColor="@color/green"
        android:backgroundTint="@color/white"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_back"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/patientDetailsBtn"
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/white"
        android:layout_height="38dp"
   android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/bottom_nav"
        app:backgroundTint="@android:color/white"
        android:textColor="#73D686"
        android:text="Continue"
        android:layout_gravity="center"/>



</androidx.constraintlayout.widget.ConstraintLayout>