<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.users.user_address">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:title="   Profile"/>
    <View

        android:id="@+id/user_address_v1"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/address_back"/>
    <CheckBox
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/checkbox_back"
        app:layout_constraintTop_toTopOf="@id/user_address_v1"
        app:layout_constraintStart_toStartOf="@id/user_address_v1"
        android:layout_marginStart="25dp"
        android:button="@null"
        android:layout_marginTop="18dp"/>
    <TextView
        android:layout_width="283dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="@id/user_address_v1"
        app:layout_constraintTop_toTopOf="@id/user_address_v1"
        android:layout_marginStart="56dp"
        android:layout_marginTop="14dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit ut aliquam, purus sit amet luctus venenatis, lectus magna fringilla urna, porttitor rhoncus"/>


</androidx.constraintlayout.widget.ConstraintLayout>