<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.users.user_order">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:title="   Orders"/>

    <View
        android:id="@+id/ellipse_15"
        android:layout_width="281dp"
        android:layout_height="281dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle_img"
        android:layout_marginTop="-106dp"
         />

    <View
        android:id="@+id/user_order_v1"
        android:layout_width="wrap_content"
        android:layout_height="97dp"
       app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="37dp"
        android:layout_marginStart="22dp"
       app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="22dp"
        android:background="@drawable/rectangle_3"
        android:elevation="3dp"
        />
    <ImageView
        android:id="@+id/user_oder_iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/user_order_v1"
        app:layout_constraintStart_toStartOf="@id/user_order_v1"
        app:layout_constraintBottom_toBottomOf="@id/user_order_v1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/img4"/>

    <TextView
        android:id="@+id/user_order_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="top"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="0sp"
        android:text="Telam 40mg Strip Of 30 \nTablets"
        app:layout_constraintStart_toEndOf="@+id/user_oder_iv1"
        android:layout_marginStart="11dp"
        app:layout_constraintTop_toTopOf="@id/user_order_v1" />
    <TextView
        android:id="@+id/user_order_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="top"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="0sp"
        android:text="Rs 122"
        app:layout_constraintStart_toEndOf="@+id/user_oder_iv1"
        android:layout_marginStart="11dp"
        app:layout_constraintTop_toBottomOf="@id/user_order_tv1" />
    <TextView
        android:id="@+id/user_order_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:gravity="top"
        android:textSize="11sp"
        android:textColor=" #73D686"
        android:lineSpacingExtra="0sp"
        android:text="On Your Way"
        app:layout_constraintStart_toStartOf="@id/user_order_v1"
        android:layout_marginStart="128dp"
        app:layout_constraintTop_toTopOf="@id/user_order_v1"
        app:layout_constraintBottom_toBottomOf="@id/user_order_v1"/>
    <TextView
        android:id="@+id/user_order_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:gravity="top"
        android:fontFamily="@font/robotoregular"
        android:textSize="8sp"
        android:textColor="#1C9634"
        android:lineSpacingExtra="0sp"
        android:text="Track"
        app:layout_constraintStart_toStartOf="@id/user_order_v1"
        android:layout_marginStart="203dp"
        app:layout_constraintTop_toTopOf="@id/user_order_v1"
        app:layout_constraintBottom_toBottomOf="@id/user_order_v1"/>

</androidx.constraintlayout.widget.ConstraintLayout>